<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AllScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewPic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:adjustViewBounds="true"
            android:contentDescription="@string/todo"
            android:cropToPadding="false"
            android:focusable="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/pusto" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Uchastok"
                style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:scaleX="1"
                android:scaleY="1"
                android:singleLine="false"
                android:textSize="360sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                tools:text="Не расслышал. Номер дома не оцифровывается(" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Golos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            app:autoSizeStepGranularity="5dp"
            app:autoSizeTextType="uniform"
            tools:text="217 СТРЕЛКОВОЙ ДИВИЗИИ дом 33 корпус 3" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleY="4"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_AKYN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        app:autoSizeTextType="uniform"
        tools:text="217 СТРЕЛКОВОЙ ДИВИЗИИ дом 33 корпус 3" />

</LinearLayout>