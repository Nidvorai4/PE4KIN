<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AllScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_Uchastok"
            style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:scaleX="1"
            android:scaleY="1"
            android:text="@string/helpp"
            android:textSize="360sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            tools:text="Не расслышал. Номер дома не оцифровывается(" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewPic"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="bottom"
        android:layout_weight="4"
        android:adjustViewBounds="false"
        android:contentDescription="@string/blabla"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pusto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_Golos"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            tools:text="217 СТРЕЛКОВОЙ ДИВИЗИИ\nдом 33\nкорпус 3" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleY="4"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView_AKYN"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="18sp"
        app:autoSizeTextType="uniform"
        tools:text="217 СТРЕЛКОВОЙ ДИВИЗИИдом 33корпус 3" />

</LinearLayout>